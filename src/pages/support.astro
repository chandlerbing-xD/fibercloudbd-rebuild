---
// src/pages/support.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Support & Help Center - FiberCloudBD">

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-blue-50 pt-20 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900">
        How Can We <span class="text-blue-600">Help You</span>?
      </h1>
      <p class="mt-6 text-xl text-gray-600 max-w-3xl mx-auto">
        Our support team is here 24/7 to assist with any questions or issues.
      </p>
    </div>
  </section>

  <!-- Quick Actions -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-6">
        <a href="tel:+8801234567890" class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl p-8 text-center hover:shadow-2xl transition-all transform hover:-translate-y-1">
          <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Call Us</h3>
          <p class="text-blue-100 text-sm mb-4">24/7 Phone Support</p>
          <p class="text-white font-semibold">+880 1234-567890</p>
        </a>

        <a href="mailto:support@fibercloudbd.com" class="bg-white border-2 border-gray-200 rounded-2xl p-8 text-center hover:border-blue-600 hover:shadow-xl transition-all transform hover:-translate-y-1">
          <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Email Us</h3>
          <p class="text-gray-600 text-sm mb-4">Response within 2 hours</p>
          <p class="text-blue-600 font-semibold">support@fibercloudbd.com</p>
        </a>

        <a href="#chat" class="bg-white border-2 border-gray-200 rounded-2xl p-8 text-center hover:border-blue-600 hover:shadow-xl transition-all transform hover:-translate-y-1">
          <div class="w-16 h-16 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Live Chat</h3>
          <p class="text-gray-600 text-sm mb-4">Instant assistance</p>
          <p class="text-green-600 font-semibold">Start Chat</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Network Status -->
  <section id="status" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-lg p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-bold text-gray-900">Network Status</h2>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-green-600 font-semibold">All Systems Operational</span>
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-gray-50 rounded-2xl p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="font-semibold text-gray-900">Network Uptime</h3>
              <span class="text-green-600 font-bold">99.9%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-green-500 h-3 rounded-full" style="width: 99.9%"></div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-2xl p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="font-semibold text-gray-900">Average Speed</h3>
              <span class="text-blue-600 font-bold">Fast</span>
            </div>
            <p class="text-gray-600 text-sm">All plans performing at advertised speeds</p>
          </div>

          <div class="bg-gray-50 rounded-2xl p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="font-semibold text-gray-900">Support Response</h3>
              <span class="text-blue-600 font-bold">&lt; 5 min</span>
            </div>
            <p class="text-gray-600 text-sm">Average first response time</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section id="faq" class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900">
          Frequently Asked <span class="text-blue-600">Questions</span>
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          Quick answers to common questions
        </p>
      </div>

      <div class="space-y-6">
        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            How do I check my internet speed?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">
            You can test your speed at <a href="https://speedtest.net" class="text-blue-600 hover:underline" target="_blank">Speedtest.net</a> or <a href="https://fast.com" class="text-blue-600 hover:underline" target="_blank">Fast.com</a>. For best results, connect via ethernet cable and close other applications.
          </p>
        </details>

        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            What should I do if my internet is slow?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="mt-4 text-gray-600 space-y-2">
            <p><strong>Quick troubleshooting steps:</strong></p>
            <ol class="list-decimal list-inside space-y-1 ml-4">
              <li>Restart your router (unplug for 30 seconds)</li>
              <li>Check if other devices are downloading large files</li>
              <li>Test speed with ethernet connection</li>
              <li>Contact support if issue persists</li>
            </ol>
          </div>
        </details>

        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            How do I reset my router?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">
            To reset your router: 1) Unplug the power cable, 2) Wait 30 seconds, 3) Plug it back in, 4) Wait 2-3 minutes for full restart. If you need to factory reset, press and hold the reset button for 10 seconds.
          </p>
        </details>

        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            How do I change my WiFi password?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">
            Login to your router admin panel (usually 192.168.1.1), navigate to WiFi settings, and update your password. Contact support if you need help accessing the admin panel.
          </p>
        </details>

        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            What payment methods do you accept?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">
            We accept bKash, Nagad, Rocket, bank transfers, credit/debit cards, and cash payments at our office. Auto-payment options are available for your convenience.
          </p>
        </details>

        <details class="group bg-white border border-gray-200 rounded-2xl p-6 hover:border-blue-600 transition-colors">
          <summary class="flex justify-between items-center cursor-pointer font-semibold text-lg text-gray-900">
            Do you offer refunds?
            <svg class="w-5 h-5 text-gray-600 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">
            Yes! We offer a 7-day satisfaction guarantee. If you're not happy with our service in the first week, we'll provide a full refund, no questions asked.
          </p>
        </details>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600 mb-4">Can't find what you're looking for?</p>
        <a href="#contact" class="inline-flex items-center text-blue-600 font-semibold text-lg hover:text-blue-700">
          Contact our support team
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section id="contact" class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-3xl shadow-xl p-8 md:p-12">
        <div class="text-center mb-10">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Send Us a Message
          </h2>
          <p class="text-xl text-gray-600">
            We'll get back to you within 2 hours
          </p>
        </div>

        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">
                Full Name *
              </label>
              <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                  placeholder="Your name"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-900 mb-2">
                Phone Number *
              </label>
              <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                  placeholder="+880 1234-567890"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
              Email Address *
            </label>
            <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-semibold text-gray-900 mb-2">
              Subject *
            </label>
            <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
            >
              <option value="">Select a topic</option>
              <option value="technical">Technical Support</option>
              <option value="billing">Billing Question</option>
              <option value="new-service">New Service Inquiry</option>
              <option value="upgrade">Plan Upgrade</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
              Message *
            </label>
            <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all resize-none"
                placeholder="Please describe your question or issue..."
            ></textarea>
          </div>

          <button
              type="submit"
              class="w-full bg-blue-600 text-white py-4 rounded-full font-semibold text-lg hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            Send Message
          </button>

          <p class="text-center text-sm text-gray-500">
            By submitting this form, you agree to our privacy policy
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Office Location -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Visit Our Office
        </h2>
        <p class="text-xl text-gray-600">
          We're here to help you in person
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-start">
        <div class="bg-gray-50 rounded-3xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h3>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-gray-900 mb-1">Address</h4>
                <p class="text-gray-600">House #123, Road #45<br/>Banani, Dhaka 1213<br/>Bangladesh</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-gray-900 mb-1">Phone</h4>
                <p class="text-gray-600">+880 1234-567890<br/>+880 9876-543210</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-gray-900 mb-1">Office Hours</h4>
                <p class="text-gray-600">Saturday - Thursday: 9 AM - 6 PM<br/>Friday: Closed</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                <p class="text-gray-600">support@fibercloudbd.com<br/>sales@fibercloudbd.com</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-200 rounded-3xl overflow-hidden h-96">
          <!-- Placeholder for Google Maps embed -->
          <div class="w-full h-full flex items-center justify-center text-gray-500">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-sm">Google Maps integration</p>
              <p class="text-xs text-gray-400 mt-1">(Add your location coordinates)</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>