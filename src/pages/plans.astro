---
// src/pages/plans.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Plans & Pricing - FiberCloudBD">

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-blue-50 pt-20 pb-16">
