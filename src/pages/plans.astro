        <!-- Premium Plan -->
        <div class="bg-white border-2 border-gray-200 rounded-3xl p-8 hover:border-blue-600 transition-all hover:shadow-2xl">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Premium</h3>
